@model Assignment.Models.Category

@{
    ViewData["Title"] = "Shop Bags for " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Description)
            </th>                                   
            <th>                                    
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Capacity)
            </th>                                   
            <th>                                    
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Published)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bags.FirstOrDefault().Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Bags) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Published)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.Id">View Bag</a> |
                <a asp-controller="Carts" asp-action="AddToCart" asp-route-id ="@item.Id">Add To Cart</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
